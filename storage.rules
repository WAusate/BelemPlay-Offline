rules_version = '2';

// Firebase Storage Security Rules
// Allow public read access and authenticated write access
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for the hinos folder
    match /hinos/{allPaths=**} {
      // Allow public read access to all audio files
      allow read: if true;
      
      // Allow write (upload, update, delete) only for authenticated users
      allow write: if request.auth != null;
    }
    
    // Default rule for other files (more restrictive)
    match /{allPaths=**} {
      // Allow read and write only for authenticated users for other files
      allow read, write: if request.auth != null;
    }
  }
}