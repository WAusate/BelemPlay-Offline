{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "client/src/lib/dom-error-handler.ts",
    "client/src/lib/insertbefore-fix.ts",
    "client/src/utils/dom-error-suppressor.ts",
    "./client/src/utils/dom-error-suppressor.ts",
    "./client/src/lib/dom-error-handler.ts",
    "./client/src/lib/insertbefore-fix.ts",
    "./client/src/lib/firebaseService-old.ts",
    "./client/src/pages/TestFirebase.tsx",
    "client/src/lib/firebaseService-old.ts",
    "client/src/pages/TestFirebase.tsx"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
