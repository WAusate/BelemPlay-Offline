rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all users
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow write access to authenticated users for hymns collection
    match /hinos/{hymnId} {
      allow write: if request.auth != null;
    }
  }
}